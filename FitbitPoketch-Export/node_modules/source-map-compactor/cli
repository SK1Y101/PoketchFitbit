#!/usr/bin/env js

var argv = process.argv;

if (argv.length < 4) {
	console.error('Usage: source-map-compactor [input-file] [output-file]');
}

var srcFile = argv[2];
var dstFile = argv[3];

var compactor = require('./index.js')
var fs = require('fs');

fs.writeFileSync(dstFile,
	compactor(fs.readFileSync(srcFile).toString())
);
