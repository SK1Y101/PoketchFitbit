#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/js" ]; then
  "$basedir/js"  "$basedir/../source-map-compactor/cli" "$@"
  ret=$?
else 
  js  "$basedir/../source-map-compactor/cli" "$@"
  ret=$?
fi
exit $ret
